<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/anchorRlyt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/barrage_background_color"
        android:padding="5dp">

        <com.whcd.base.widget.RoundImageView
            android:id="@+id/avatarImageVideo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_portrait" />

        <ImageView
            android:id="@+id/isVipImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatarImageVideo"
            android:layout_marginLeft="-14dp"
            android:layout_toRightOf="@id/avatarImageVideo"
            android:src="@drawable/ic_vip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="我叫果果"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size10" />

            <TextView
                android:id="@+id/sayContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="姐姐关注我吧!"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size10" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>