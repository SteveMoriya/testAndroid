<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <com.whcd.base.widget.TopMenuBar
        android:id="@+id/topMenuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/PushLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="推送消息"
            android:textSize="@dimen/normal_font_size" />
       <!-- <Switch
            android:background="@color/green"
            android:layout_toLeftOf="@+id/zwback"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />-->

        <ToggleButton
            android:id="@+id/pushTBtn"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:checked="true"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:button="@drawable/bg_toggle_btn_ispush"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>


    <View
        style="@style/light_divider_line"
        />
    <RelativeLayout
        android:id="@+id/xiugaiView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="修改密码"
            android:textSize="@dimen/normal_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_jiantou_left" />
    </RelativeLayout>
    <View style="@style/light_divider_line" />
    <RelativeLayout
        android:id="@+id/safeView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="意见反馈"
            android:textSize="@dimen/normal_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_jiantou_left" />
    </RelativeLayout>
    <View style="@style/light_divider_line" />

    //
    <RelativeLayout
        android:id="@+id/backListLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="服务条款"
            android:textSize="@dimen/normal_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_jiantou_left" />
    </RelativeLayout>

    <View style="@style/light_divider_line" />



    <View style="@style/light_divider_line" />

    <RelativeLayout
        android:id="@+id/clearCacheLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="清除缓存"
            android:textSize="@dimen/normal_font_size" />
        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/zw2"
            android:text="13.0MB"
            android:textColor="@color/title_bg_pink_color"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/zw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_jiantou_left" />
    </RelativeLayout>

    <View style="@style/light_divider_line" />


    <RelativeLayout
        android:id="@+id/commonproblemsViw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="检查更新"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/set_vision_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/zw3"
            android:text=""
            android:textColor="@color/title_bg_pink_color"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/zw3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_jiantou_left"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#808080" />
    </RelativeLayout>

    <View style="@style/light_divider_line" />

    <RelativeLayout
        android:id="@+id/aboutUsView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="关于我们"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/cleanCacheTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_jiantou_left"
            android:padding="10dp"
            android:textColor="#808080" />
    </RelativeLayout>

    <View style="@style/light_divider_line" />

    <View
        style="@style/light_divider_line"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_edit_blue_b"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_font_size" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="10dp"
        android:textColor="@color/main_menu_font_color"
        android:textSize="@dimen/title_font_size" />

</LinearLayout>