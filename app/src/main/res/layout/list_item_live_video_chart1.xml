<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:as="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:background="@drawable/bg_black_nostorke1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/magin"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:visibility="gone"
                android:id="@+id/levelImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp" />

            <TextView
                android:visibility="visible"
                android:id="@+id/nameTv"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/levelImg"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/main_color"
                />
            <RelativeLayout
                android:id="@+id/line1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:visibility="gone"
                >
                <com.whcd.base.widget.RoundImageView
                    android:id="@+id/user_tx_itemlive"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mrtx"
                    as:border_inside_color="@color/title_bg_pink_color"
                    as:border_inside_thickness="1dp"
                    as:border_outside_color="@color/title_bg_pink_color"
                    as:border_outside_thickness="1dp" />

                <ImageView
                    android:layout_marginRight="@dimen/magin"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/isVipImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_home_v" />


            </RelativeLayout>
            <TextView
                android:id="@+id/messageTv"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/text_msg_white"
                android:textSize="@dimen/text_size14"
                android:text="13"
                android:layout_marginRight="@dimen/magin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/magin_s">
            <ImageView
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:id="@+id/question_img1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="@dimen/magin_s"/>
            <ImageView
                android:layout_marginRight="@dimen/magin_s"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:id="@+id/question_img2"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <ImageView
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:id="@+id/question_img3"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
        
        <View
            android:id="@+id/pic_Line"
            android:visibility="gone"
            android:layout_marginLeft="42dp"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/white_s"
            ></View>
        
        <TextView
            android:visibility="gone"
            android:id="@+id/ansContent"
            android:layout_marginTop="@dimen/magin_s"
            android:layout_marginBottom="@dimen/magin_s"
            android:layout_marginLeft="42dp"
            android:text="回答内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_msg_white"
            android:textSize="@dimen/text_size14"/>
        <TextView
            android:layout_marginTop="@dimen/magin_s"
            android:layout_marginBottom="@dimen/magin_s"
            android:id="@+id/toans"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答"
            android:layout_marginLeft="42dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/magin"
            android:paddingRight="@dimen/magin"
            android:background="@drawable/bg_edit_blue_ss1"/>
    </LinearLayout>






</RelativeLayout>