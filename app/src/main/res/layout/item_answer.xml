<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:as="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginRight="@dimen/magin"
        android:layout_marginLeft="@dimen/magin"
        android:layout_marginTop="@dimen/magin"
        android:background="@drawable/bg_white_big_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/magin"
            android:layout_marginRight="@dimen/magin"
            android:layout_toRightOf="@id/user_tx_itemlive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size12"
                android:textColor="@color/black_ss"
                android:text="提问内容先试试雷克沙快结束了看见尽快立法的看v就阿卡丽据了解了吗"/>


            <TextView
                android:layout_marginTop="@dimen/magin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-04-09 12:00:00"
                android:id="@+id/askTime"
                android:textSize="@dimen/text_size10"
                android:textColor="@color/gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/magin"
                android:background="@color/line_color"></View>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/teacherName"
                    android:text="讲师名称: "
                    android:textSize="@dimen/text_size12"
                    android:textColor="@color/black_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/teacherAnsawer"
                    android:text="回答内容"
                    android:textSize="@dimen/text_size12"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/magin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-04-09 12:00:00"
                android:id="@+id/ansTime"
                android:textSize="@dimen/text_size10"
                android:textColor="@color/gray"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
