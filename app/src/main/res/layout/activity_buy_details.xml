<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="@color/white_s"
    tools:context="com.wehang.ystv.ui.BuyDetails">
    <com.whcd.base.widget.TopMenuBar
        android:id="@+id/topMenuBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.whcd.base.widget.TopMenuBar>
    <com.whcd.base.widget.PageListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/background"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/leftTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:layout_marginLeft="@dimen/magin"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="@color/black_s"/>
        <TextView
            android:id="@+id/totalMonney"
            android:layout_toRightOf="@id/leftTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥40.00"
            android:layout_marginLeft="@dimen/magin"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/toPay"
            android:layout_alignParentRight="true"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="去支付"
            android:layout_marginRight="@dimen/magin"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/magin"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:padding="@dimen/pading"
            android:textColor="@color/white_s"
            android:background="@drawable/bg_edit_blue_s"/>
    </RelativeLayout>
</LinearLayout>
