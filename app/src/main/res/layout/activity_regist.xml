<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.wehang.ystv.ui.RegistActivity">
    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_edit_white"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="11dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_phone"
            />
        <EditText
            android:id="@+id/login_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:hint="请输入手机号"
            android:background="@null"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:textSize="@dimen/text_size15"
            android:textColorHint="@color/white_s"
            android:padding="10dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_white"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="11dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_paper"/>
            <EditText
                android:id="@+id/regist_yzET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textColorHint="@color/white_s"
                android:gravity="left|center_vertical"
                android:hint="请输入验证码"
                android:background="@null"
                android:textSize="@dimen/text_size15"
                android:maxLength="6"
                android:padding="10dp"
               />


        </LinearLayout>
        <TextView

            android:layout_marginLeft="30dp"
            android:id="@+id/regist_yzmTv"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="获取验证码"
            android:gravity="center"
            android:background="@drawable/bg_edit_white2"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size15"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_edit_white"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="11dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_clock_suo"
            />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:hint="请输入密码"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLength="16"
            android:textSize="@dimen/text_size15"
            android:textColorHint="@color/white_s"
            android:padding="10dp"
           />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_edit_white"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="11dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_clock_suo"
            />
        <EditText
            android:id="@+id/login_password_ag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:hint="请再次输入密码"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLength="16"
            android:textSize="@dimen/text_size15"
            android:textColorHint="@color/white_s"
            android:padding="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/regist_confirmTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bg_red_solid2"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="下 一 步"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size16" />
    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">
        <TextView
            android:layout_marginLeft="8dp"
            android:textColor="@color/white_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_ysl_size"
            android:text="点击下一步即同意"/>
        <TextView
            android:id="@+id/detalis"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_ysl_size"
            android:text="《优生TV注册协议》"/>
    </LinearLayout>
</LinearLayout>
