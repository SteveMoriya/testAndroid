<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:as="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/headLayout"
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="center">
        <com.whcd.base.widget.RoundImageView
            android:background="@null"
            android:id="@+id/headImg"
            android:layout_centerInParent="true"
            android:layout_width="130dp"
            android:layout_height="130dp"
            as:border_inside_color="@color/white_s"
            as:border_inside_thickness="1dp"
            as:border_outside_color="@color/white_s"
            as:border_outside_thickness="1dp"
            android:src="@drawable/sctx_tx"></com.whcd.base.widget.RoundImageView>
        <TextView
            android:id="@+id/shangctis"
            android:text="上传头像"
            android:layout_marginTop="125dp"
            android:textColor="@color/white_s"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.wehang.ystv.myappview.WaterWaveView
            android:id="@+id/wpv"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="135dp"
            android:layout_height="135dp"></com.wehang.ystv.myappview.WaterWaveView>
        <com.wehang.ystv.myappview.WaterWaveView2
            android:id="@+id/wpv2"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="135dp"
            android:layout_height="135dp"></com.wehang.ystv.myappview.WaterWaveView2>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"></View>
</LinearLayout>
