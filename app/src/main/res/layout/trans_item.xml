<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/magin"
        android:layout_marginRight="@dimen/magin"
        android:layout_marginLeft="@dimen/magin"
        android:background="@drawable/bg_edit_white2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_marginLeft="@dimen/magin"
                android:id="@+id/time"
                android:layout_centerVertical="true"
                android:text="2017-04-01 09:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/howMach"
                android:layout_marginRight="@dimen/magin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="-20.00"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size15"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="18dp"
            android:background="@color/line_color"></View>
        <LinearLayout
            android:id="@+id/trans_noshow"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_marginLeft="@dimen/magin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:text="资源名称："/>
            <TextView
                android:id="@+id/zyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:text="智慧胎儿教育"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_marginLeft="@dimen/magin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:text="交易类型："/>
            <TextView
                android:id="@+id/transType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:text="充值"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp">
            <TextView
                android:layout_marginLeft="@dimen/magin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:text="付款方式："/>
            <TextView
                android:id="@+id/useType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:text="支付宝"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
