<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:as="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tiwenBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_big_shape"
        android:paddingBottom="15dp">
        <TextView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/magin"
            android:layout_marginRight="@dimen/magin"
            android:layout_marginBottom="@dimen/magin_s"
            android:id="@+id/toans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答"
            android:layout_marginLeft="42dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/magin"
            android:paddingRight="@dimen/magin"
            android:background="@drawable/bg_edit_blue_ss1"/>
        <com.whcd.base.widget.RoundImageView
            android:id="@+id/user_tx_itemlive"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="@dimen/magin"
            android:scaleType="centerCrop"
            android:src="@drawable/mrtx"
            as:border_inside_color="@color/title_bg_pink_color"
            as:border_inside_thickness="0.5dp"
            as:border_outside_color="@color/title_bg_pink_color"
            as:border_outside_thickness="0.5dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/user_tx_itemlive"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名称"
                android:textColor="@color/black_s"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/liveName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/magin"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:text="#直播名称"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size12" />

            <TextView
                android:id="@+id/contentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提问内容先试试雷克沙快结束了看见尽快立法的看v就阿卡丽据了解了吗"
                android:textColor="@color/black_ss"
                android:textSize="@dimen/text_size12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tw_img1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="@dimen/magin"
                    android:layout_marginTop="@dimen/magin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/live_mrjz" />

                <ImageView
                    android:id="@+id/tw_img2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="@dimen/magin"
                    android:layout_marginTop="@dimen/magin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/live_mrjz" />

                <ImageView
                    android:id="@+id/tw_img3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/magin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/live_mrjz" />
            </LinearLayout>

            <TextView
                android:id="@+id/askTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/magin"
                android:text="2017-04-09 12:00:00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size10"
                android:visibility="visible" />
            <!--有回答就显示-->
            <LinearLayout
                android:id="@+id/isShowAnsLiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/line_color"></View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/teacherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="讲师名称: "
                        android:textColor="@color/black_s"
                        android:textSize="@dimen/text_size12" />

                    <TextView
                        android:id="@+id/teacherAnsawer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回答内容"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ansTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="@dimen/magin"
                    android:text="2017-04-09 12:00:00"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size10"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/showDeltLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/delte"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_above="@+id/dibu"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/magin"
                android:background="@drawable/red_s"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white_s"
                android:textSize="@dimen/text_size15" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
