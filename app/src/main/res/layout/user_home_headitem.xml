<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:as="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/person_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editInfoImg"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/sel_btn_edit_info"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/magin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.whcd.base.widget.RoundImageView
                    android:id="@+id/headImg"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mrtx"
                    as:border_inside_color="@color/white_s"
                    as:border_inside_thickness="1.5dp"
                    as:border_outside_color="@color/white_s"
                    as:border_outside_thickness="1.5dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/isVipImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_vip"
                android:gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:text="李思雨"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font2_size" />

            <ImageView
                android:id="@+id/sexImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_home_b" />


            <!-- <RelativeLayout
                 android:layout_width="33dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="4dp">
                 <ImageView
                     android:id="@+id/levelImg"
                     android:layout_width="33dp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="0dp"
                     android:src="@drawable/icon_ss_dengji" />
                 <TextView
                     android:id="@+id/levelImgTV"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="6dp"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/text_size10"
                     android:textColor="@color/white_s"/>
             </RelativeLayout>-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size10"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/concernLlyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="关注"
                    android:textColor="#AAFFFFFF"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/concernNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_font_size" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="2.5dp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/fansLlyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="粉丝"
                    android:textColor="#AAFFFFFF"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/fansNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_font_size" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/numsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size10"
            android:gravity="center"
            android:text="ID：62255512"
            android:textColor="#88FFFFFF"
            android:textSize="@dimen/normal_font2_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tradesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textColor="#AAFFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="动态记录"
        android:background="@color/white_s"
        android:paddingLeft="@dimen/magin"
        android:textSize="@dimen/text_size15"
        android:gravity="center_vertical"
        android:textColor="@color/black_s"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="7.5dp"
        android:background="@color/linezw_color"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"></View>
</LinearLayout>
