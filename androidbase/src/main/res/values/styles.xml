<resources>


    <style name="in_out_pop_live">
        <item name="android:windowEnterAnimation">@anim/pow_live_in</item>
        <item name="android:windowExitAnimation">@anim/pow_live_out</item>
    </style>
    <!-- activity透明样式 -->
    <style name="transparent" parent="android:Theme.Holo.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 顶部工具栏 -->
    <style name="top_tab_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <!-- 联网默认弹窗 -->
    <style name="custom_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 顶部工具栏title -->
    <style name="top_tab_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottom_tab_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">#F9F9F9</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#E0E0E0</item>
    </style>

    <style name="light_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="listview_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>

    <style name="Lite.Animation.Toast" parent="@android:style/Animation.Toast">
        <item name="android:windowEnterAnimation">@anim/lite_toast_enter</item>
        <item name="android:windowExitAnimation">@anim/lite_toast_exit</item>
    </style>
</resources>